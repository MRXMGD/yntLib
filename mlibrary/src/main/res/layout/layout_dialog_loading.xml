<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/layer_bg_dialog"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="@dimen/distanceL">

    <com.github.jdsjlzx.progressindicator.AVLoadingIndicatorView
        android:id="@+id/loadingView"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:indicatorColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/distance"
        android:layout_marginRight="@dimen/distanceXS"
        android:text="@string/loadingText"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/textSize" />

</LinearLayout>